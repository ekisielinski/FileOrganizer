@page "/users/new"
@model FileOrganizer.WebUI.Pages.NewUserModel

<h2>Create new user</h2>

<form asp-page="NewUser" method="post">
    <label asp-for="Model.UserName">User name</label><br />
    <input asp-for="Model.UserName" autocomplete="off" /><br />
    <span asp-validation-for="Model.UserName"></span>

    <br />

    <label asp-for="Model.UserDisplayName">Display name</label><br />
    <input asp-for="Model.UserDisplayName" autocomplete="off" /><br />

    <br />

    <label asp-for="Model.Password"></label><br />
    <input asp-for="Model.Password" type="password" /><br />
    <span asp-validation-for="Model.Password"></span>

    <br />

    <label asp-for="Model.IsModerator">Add moderator privileges</label><br />
    <input asp-for="Model.IsModerator" /><br />

    <div asp-validation-summary="ModelOnly">
        <br />
        <span>Please correct the following errors</span>
    </div>

    <br />

    <input type="submit" value="Create" />

</form>

<a asp-page="Users">Back to users</a>
