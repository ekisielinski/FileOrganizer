@page "/users/new"
@model FileOrganizer.WebUI.Pages.NewUserModel

<h2>Create new user</h2>

<form asp-page="NewUser" method="post">
    <label asp-for="UserName">User name</label><br />
    <input asp-for="UserName" autocomplete="off" /><br />
    <span asp-validation-for="UserName"></span>

    <br />

    <label asp-for="UserDisplayName">Display name</label><br />
    <input asp-for="UserDisplayName" autocomplete="off" /><br />

    <br />

    <label asp-for="Password"></label><br />
    <input asp-for="Password" type="password" /><br />
    <span asp-validation-for="Password"></span>

    <br />

    <label asp-for="IsModerator">Add moderator privileges</label><br />
    <input asp-for="IsModerator" /><br />

    <div asp-validation-summary="ModelOnly">
        <br />
        <span>Please correct the following errors</span>
    </div>

    <br />

    <input type="submit" value="Create" />

</form>

<a asp-page="Users">Back to users</a>
